  <script>
    // Fetch the admin name from the server using the Fetch API
  fetch('/getLoggedInAdminName')
    .then(response => response.json())
    .then(data => {
      // Update the HTML content with the admin name
      document.getElementById('adminNamePlaceholder').textContent = data.name;
      document.getElementById('adminNameHeader').textContent = data.name;
    })
    .catch(error => console.error('Error fetching admin name:', error));
    $(document).ready(function () {
      const userIdDropdown = $('#userId');
      const membershipTypeInput = $('#membershipType');
      const datePaidInput = $('#datePaid');
      const subscriptionExpirationInput = $('#subscriptionExpiration');
      const amountInput = $('#amount');
      const billForm = $('#billForm');
      const billTableBody = $('#billTableBody');
      
  
      // Function to calculate subscription expiration
      function calculateSubscriptionExpiration() {
        const selectedUserId = userIdDropdown.val();
  
        // Make an Ajax request to fetch user details based on the selected user ID
        $.get(`/getUserDetails/${selectedUserId}`)
          .done(function (data) {
            console.log('Received data:', data);
  
            // Update the form fields with the fetched data
            membershipTypeInput.val(data.membershipType);
  
            // Calculate subscriptionExpiration (one month after the date paid)
            const datePaidObject = new Date(datePaidInput.val());
            const subscriptionExpiration = new Date(datePaidObject.setMonth(datePaidObject.getMonth() + 1));
  
            // Check if the calculated date is valid
            if (!isNaN(subscriptionExpiration.getTime())) {
              // Format subscriptionExpiration as "mm/dd/yy"
              const formattedDate = subscriptionExpiration.toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric' });
              subscriptionExpirationInput.val(formattedDate);
            } else {
              console.error('Invalid date calculated');
              subscriptionExpirationInput.val(''); // Clear the input if the date is invalid
            }
  
            // Calculate the amount based on membership type
            const amount = (data.membershipType === 'regular') ? 1300 : 1200;
            amountInput.val(amount);
          })
          .fail(function (error) {
            console.error('Error fetching user details:', error);
          });
      }
  
      // Attach the calculateSubscriptionExpiration function to the change event of datePaidInput
      datePaidInput.on('change', calculateSubscriptionExpiration);
  
      // Fetch all users and populate the userId dropdown
      $.get('/getAllSubscribedUsers')
        .done(function (users) {
          users.forEach(function (user) {
            const option = $('<option>').val(user.subscribedId).text(`${user.firstName} ${user.lastName}`);
            userIdDropdown.append(option);
          });
        })
        .fail(function (error) {
          console.error('Error fetching users:', error);
        });
  
      // Attach an event listener to the form submission
      billForm.on('submit', function (event) {
        event.preventDefault(); // Prevent the default form submission
  
        // Make an Ajax request to submit the form data
        $.ajax({
          url: '/createBill',
          method: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({
            userId: userIdDropdown.val(),
            datePaid: datePaidInput.val(),
            amount: amountInput.val(),
          }),
        })
          .done(function () {
            // Show success pop-up
            Swal.fire({
              icon: 'success',
              title: 'Bill uploaded successfully!',
              showConfirmButton: false,
              timer: 1000, // Set the timer duration in milliseconds (adjust as needed)
            });
            // Fetch and fill the bills table
            fillBillsTable();
            location.reload(true);
          })
          .fail(function (error) {
            console.error('Error uploading bill:', error);
            // Show failure pop-up
            Swal.fire({
              icon: 'error',
              title: 'Failed to upload bill',
              text: 'Please try again.',
              showConfirmButton: false,
              timer: 1000,
              });
          });
      });
  
      // Attach the calculateSubscriptionExpiration function to the change event of userIdDropdown
      userIdDropdown.on('change', calculateSubscriptionExpiration);
  
      function fillBillsTable() {
  // Make an Ajax request to fetch bill details
  $.get('/getAllBills')
    .done(function (bills) {
      billTableBody.empty(); // Clear existing rows

      bills.forEach(function (bill) {
        // Parse the date strings
        const datePaid = new Date(bill.datePaid).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
        const subscriptionExpiration = new Date(bill.subscriptionExpiration).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });

        // Add PHP sign to the amount
        const amountWithSign = `₱${bill.amount}`;

        // Append a new row to the table
        billTableBody.append(
          `<tr>
            <td>${bill.userName}</td>
            <td>${bill.membershipType}</td>
            <td>${datePaid}</td>
            <td>${subscriptionExpiration}</td>
            <td>${amountWithSign}</td>
          </tr>`
        );
      });

      // Initialize DataTables after filling the table
      $('#billTable').DataTable();
    })
    .fail(function (error) {
      console.error('Error fetching bills:', error);
    });
}
  
      // Fetch and fill the bills table on page load
      fillBillsTable();
    });
  </script>
