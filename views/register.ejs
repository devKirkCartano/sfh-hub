  <section class="contact_section layout_padding" id="signup">
    <div class="container">
      <div class="heading_container">
        <h2>
          <span>
            Sign Up
          </span>
        </h2>
      </div>

      <!-- Sign Up Form -->
      <div class="card shadow-lg o-hidden border-0 my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-5 d-none d-lg-flex">
              <div class="flex-grow-1 bg-register-image"
                style="background-image: url('images/stretch_fitness_hub_logo.jpg');">
              </div>
            </div>
            <div class="col-lg-7">
              <div class="p-5">
                <div class="text-center">
                  <h4 class="text-dark mb-4" style="color: #be9b7b !important;">Create an Account!</h4>
                </div>
                <% if (error && error.length > 0) { %>
                  <div class="error-message text-center">
                      <strong><%= error %></strong>
                  </div>
              <% } %>
                
              <% if (success && success.length > 0) { %>
                  <div class="success-message text-center">
                      <strong><%= success %></strong>
                  </div>
              <% } %>
                <form class="user" method="POST" id="register-form">
                  <div class="row">
                    <div class="col-sm-6 mb-sm-0">
                        <label for="firstName" class="form-label required" style="color: #be9b7b !important;">First Name</label>
                        <input class="form-control form-control-user" type="text" id="firstName" placeholder="Enter Your First Name" name="firstName" required></div>
                    <div class="col-sm-6"> 
                        <label for="lastName" class="form-label required" style="color: #be9b7b !important;">Last Name</label>
                        <input class="form-control form-control-user" type="text" id="lastName" placeholder="Enter Your Last Name" name="lastName" required></div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6 mb-sm-0">
                        <label for="email" class="form-label required" style="color: #be9b7b !important;">Email</label>
                        <input class="form-control form-control-user" type="email" id="email" placeholder="Email Address" name="email" required>
                    </div>
                    <div class="col">
                      <label for="membershipType" class="form-label required" style="color: #be9b7b !important;">Plan</label>
                      <select class="form-select form-select-sm form-control form-control-user" name="membershipType" id="membershipType"
                        required>
                        <option value="" disabled selected>Select Membership Plan</option>
                        <option value="regular">Regular</option>
                        <option value="student">Student</option>
                      </select>
                    </div>
                  </div>
                  <div class="row">
                  </div>

                  <div class="row">
                    <div class="col-sm-6 mb-sm-0">
                      <div class="password-container">
                        <label for="pass" class="form-label required" style="color: #be9b7b !important;">Password</label>
                        <input class="form-control form-control-user" type="password" id="pass" placeholder="Password" name="password" maxlength="20" required>
                        <img class="eye-icon d-none" src="/images/eye.svg" id="show-password" title="Show Password" alt="">
                      </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="password-container">
                          <label for="re_pass" class="form-label required" style="color: #be9b7b !important;">Confirm Password</label>
                          <input class="form-control form-control-user" type="password" id="re_pass" placeholder="Repeat Password" name="re_pass" maxlength="20" required>
                          <img class="eye-icon d-none" src="/images/eye.svg" id="show-password-repeat" title="Show Password" alt="">
                        </div>
                    </div>
                  </div>
                  <div class="row my-2 d-none" id="validation-container">
                      <div class="fw-bold" id="check-0">
                        <span class="indicator"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle"
                        viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path
                          d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        At least 8 characters long.</span>
                      </div>
                      <div class="fw-bold" id="check-1">
                        <span class="indicator"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle"
                          viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                          <path
                            d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        Contain at least one uppercase letter.</span>
                      </div>
                      <div class="fw-bold" id="check-2">
                        <span class="indicator"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle"
                          viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                          <path
                            d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        Contain at least one lowercase letter</span>
                      </div>
                      <div class="fw-bold" id="check-3">
                        <span class="indicator"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle"
                          viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                          <path
                            d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        Contain at least one number.</span>
