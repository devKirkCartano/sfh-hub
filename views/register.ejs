<script>
  // Show Password
  const showPassword = document.querySelector("#show-password");
  const password = document.querySelector("#pass");
  const validation = document.querySelector("#validation-container")
  const showPasswordRepeat = document.querySelector("#show-password-repeat");
  const passwordRepeat = document.querySelector("#re_pass");
  const signup = document.querySelector("button#signup");
  let check0 = false;
  let check1 = false;
  let check2 = false;
  let check3 = false;
  let check4 = false;

  showPassword.addEventListener("click", () => {
    if(password.type === "password") {
      password.type = "text";
      showPassword.src = "/images/eye-slash.svg";
      showPassword.title = "Hide Password"
    }
    else {
      password.type = "password";
      showPassword.src = "/images/eye.svg";
      showPassword.title = "Show Password"
    }
  });

  // Event listener for input to show eye icon
    password.addEventListener("input", () => {
      signup.disabled = true;
      validation.classList.remove("d-none")
      showPassword.classList.remove("d-none");
      if (!password.value) {
        signup.disabled = false;
        showPassword.classList.add("d-none");
        validation.classList.add("d-none")
          if (password.type === "text") {
          password.type = "password";
          showPassword.src = "/images/eye.svg";
          showPassword.title = "Show Password"
        }
      }
      // Check if greater than 8 characters
      if(password.value.length >=8) {
        document.querySelector("#check-0").style.color = "#be9b7b";
        check0 = true
      } else {
        document.querySelector("#check-0").style.color = "#fff";
        check0 = false;
      }
      // Check if contains uppercase
      if(password.value.match(/[A-Z]/)) {
        document.querySelector("#check-1").style.color = "#be9b7b";
        check1 = true;
      } else {
        document.querySelector("#check-1").style.color = "#fff";
        check1 = false;
      }
      // Check if contains lowercase
      if (password.value.match(/[a-z]/)) {
        document.querySelector("#check-2").style.color = "#be9b7b";
        check2 = true;
      } else {
        document.querySelector("#check-2").style.color = "#fff";
        check2 = false;
      }
      // Check if contains number
      if (password.value.match(/[0-9]/)) {
        document.querySelector("#check-3").style.color = "#be9b7b";
        check3 = true;
      } else {
        document.querySelector("#check-3").style.color = "#fff";
        check3 = false;
      }
      // Check if contains special character
      if (password.value.match(/[^A-Za-z0-9-'']/i)){
          document.querySelector("#check-4").style.color = "#be9b7b";
          check4 = true;
      } else {
          document.querySelector("#check-4").style.color = "#fff";
          check4 = false;
      }
      // Check if password match
      if (check0 && check1 && check2 && check3 && check4) {
        signup.disabled = false;
      }
    })

  // Show Repeat Password
  showPasswordRepeat.addEventListener("click", () => { 
    if(passwordRepeat.type === "password") {
      passwordRepeat.type = "text";
      showPasswordRepeat.src = "/images/eye-slash.svg";
      showPasswordRepeat.title = "Hide Password"
    }
    else {
      passwordRepeat.type = "password";
      showPasswordRepeat.src = "/images/eye.svg";
      showPasswordRepeat.title = "Show Password"
    }
  });

  // Event listener for input to show eye icon
  passwordRepeat.addEventListener("input", () => {
    signup.disabled = true;
    showPasswordRepeat.classList.remove("d-none");
    if (!passwordRepeat.value) {
      signup.disabled = false;
      showPasswordRepeat.classList.add("d-none");
        if (passwordRepeat.type === "text") {
        passwordRepeat.type = "password";
        showPasswordRepeat.src = "/images/eye.svg";
        showPasswordRepeat.title = "Show Password"
      }
    }
    // Check if password match
    if (password.value === passwordRepeat.value){
      document.querySelector("#check-5").style.color = "#be9b7b";
      signup.disabled = false;
    } else {
      document.querySelector("#check-5").style.color = "#fff";
    }
  })
  
// Add event listener for the 'firstNameForm' input
document.getElementById('firstName').addEventListener('input', function() {
// Remove non-letter and non-space characters
  this.value = this.value.replace(/[^A-Za-z -]/g, '');

  // Remove spaces at the beginning and hyphen at the beginning
  this.value = this.value.replace(/^\s+/, '').replace(/^-/, '');

  // Limit the length if needed
  var maxLength = 30; // You can set the desired maximum length
  if (this.value.length > maxLength) {
    this.value = this.value.slice(0, maxLength);
  }
});

document.getElementById('lastName').addEventListener('input', function() {
// Remove non-letter and non-space characters
  this.value = this.value.replace(/[^A-Za-z -]/g, '');

  // Remove spaces at the beginning and hyphen at the beginning
  this.value = this.value.replace(/^\s+/, '').replace(/^-/, '');

  // Limit the length if needed
  var maxLength = 30; // You can set the desired maximum length
  if (this.value.length > maxLength) {
    this.value = this.value.slice(0, maxLength);
  }
});
document.getElementById('email').addEventListener('input', function () {
  // Remove non-letter, non-number, and non-space characters
  this.value = this.value.replace(/[^A-Za-z0-9@.-]/g, '');

  // Remove spaces at the beginning and hyphen at the beginning
  this.value = this.value.replace(/^\s+/, '').replace(/^-/, '');

  // Limit the length if needed
  var maxLength = 30; // You can set the desired maximum length
  if (this.value.length > maxLength) {
    this.value = this.value.slice(0, maxLength);
  }
});
document.getElementById('pass').addEventListener('input', function () {
  // Remove spaces
  this.value = this.value.replace(/\s/g, '');

  // Limit the length if needed
  var maxLength = 20; // You can set the desired maximum length
  if (this.value.length > maxLength) {
    this.value = this.value.slice(0, maxLength);
  }
});
document.getElementById('re_pass').addEventListener('input', function () {
  // Remove spaces
  this.value = this.value.replace(/\s/g, '');

  // Limit the length if needed
  var maxLength = 20; // You can set the desired maximum length
  if (this.value.length > maxLength) {
    this.value = this.value.slice(0, maxLength);
  }
});
