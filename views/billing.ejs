<script>
  // Wait for the document to be ready
  $(document).ready(function() {
    
    // Fetch user details data from the backend
    $.ajax({
      url: '/getUserDetails', 
      method: 'GET',
      dataType: 'json',
      success: function(userDetails) {
        // Update the displayed name in the dropdown
        $('.dropdown-toggle').text(userDetails.firstName + ' ' + userDetails.lastName);
      },
      error: function(error) {
        console.error('Error fetching user details:', error.responseText);
      }
    });

    // Initialize DataTable
    var table = $('#example').DataTable();

    // Fetch billing history data from the backend
    $.ajax({
      url: '/getBillingHistory', // Change this URL to match your backend endpoint
      method: 'GET',
      dataType: 'json',
      success: function(data) {
        // Clear existing table data
        table.clear();

        // Populate the DataTable with the retrieved data
        data.forEach(function(bill) {
          // Format date as MM/DD/YYYY
          var formattedDatePaid = new Date(bill.date_paid).toLocaleDateString('en-US');
          var formattedExpirationDate = new Date(bill.subscription_expiration).toLocaleDateString('en-US');

          // Add row to DataTable with formatted date
          table.row.add([bill.membershipType, bill.amount, formattedDatePaid, formattedExpirationDate]);
        });

        // Draw the updated table
        table.draw();
      },
      error: function(error) {
        console.error('Error fetching billing history:', error.responseText);
      }
    });
  });
</script>


